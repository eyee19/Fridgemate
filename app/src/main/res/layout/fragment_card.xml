<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchBox"
            android:layout_weight="0.4"
            android:hint="Search Recipes"
            android:textColor="@color/white"
            android:textColorHint="@color/darkMode"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/plus"
            android:drawableTop="@drawable/ic_add_black_24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/clearAll"
            android:drawableTop="@drawable/ic_delete_black_24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/ic_send_black_24dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchingFor"
        android:textSize="6pt"
        android:layout_below="@id/topLayout"
        android:hint="Add one word at a time"
        android:textColorHint="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardView"
        android:layout_below="@id/searchingFor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>